<%= render 'shared/errors', obj: @employee %>

<div class="row">
  <div class="col-xs-12">
  <%= form_for(@employee, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :first_name %><br>
      </div>
      <div class="col-sm-8">
          <%= f.text_field :first_name, class: "form-control", placeholder: "Primeiro nome", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :last_name %><br>
      </div>
      <div class="col-sm-8">
          <%= f.text_field :last_name, class: "form-control", placeholder: "Ultimo nome" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :department_id %><br>
      </div>
      <div class="col-sm-8">
        <%= f.collection_select(:department_id, Department.all, :id, :name) %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %><br>
      </div>
      <div class="col-sm-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %><br>
      </div>
      <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit( @employee.new_record? ? "Inscrever-se" : "Atualizar conta", class: "btn btn-primary btn-lg") %>
      </div>
    </div>
  <% end %>

    <div class="text-center">
      [ <%= link_to 'Cancelar inserção e voltar para a lista de departamentos', departments_path %> ]
    </div>
  </div>
</div>

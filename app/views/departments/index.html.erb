<h1 class="text-center">Listando todos os departments</h1>
<p>
  <%= link_to 'Create a new department', new_department_path %>
</p>

<% @departments.each do |department| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="department-title">
          <%= link_to department.name, department_path(department) %>
        </div>
        <div class="department_actions">
          <% if logged_as_admin? %>
            <%= link_to 'Editar', edit_department_path(department), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Deletar', department_path(department), method: :delete,
                                                                data: {confirm: "VocÃª tem certeza?"},
                                                                class: "btn btn-xs btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

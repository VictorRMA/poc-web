<h1 class="text-center">Listando todas as tarefas</h1>
<p>
  <%= link_to 'Create a new task', new_task_path %>
</p>

<% @tasks.each do |task| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="task-title">
          <%= link_to task.name, task_path(task)%>
        </div>
        <div class="task_actions">
          <% if logged_as_admin? %>
            <%= link_to 'Editar', edit_task_path(task), class: "btn btn-xs btn-primary" %>
            <%= link_to 'Deletar', task_path(task), method: :delete,
                                                                data: {confirm: "VocÃª tem certeza?"},
                                                                class: "btn btn-xs btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

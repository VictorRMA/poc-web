<h1 class="text-center">Listando todos os departamentos</h1>
<p>
  <%= link_to 'Create a new Departamento', new_departamento_path %>
</p>

<% @departamentos.each do |departamento| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="departamento-title">
          <%= link_to departamento.nome, departamento_path(departamento) %>
        </div>
        <%= link_to 'Editar', edit_departamento_path(departamento), class: "btn btn-xs btn-primary" %>
        <%= link_to 'Deletar', departamentos_path(departamento), method: :delete,
                                                                  data: {confirm: "VocÃª tem certeza?"},
                                                                  class: "btn btn-xs btn-danger" %>
      </div>
    </div>
  </div>
<% end %>

<%= render 'shared/errors', obj: @work_time %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@work_time, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %><br>
        </div>
        <div class="col-sm-8">
            <%= f.text_area :description, class: "form-control", placeholder: "Descrição do que foi realizado", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :datetime_start %><br>
        </div>
        <div class="col-sm-8">
          <%= f.datetime_select :datetime_start %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :datetime_end %><br>
        </div>
        <div class="col-sm-8">
          <%= f.datetime_select :datetime_end %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :employee_id %><br>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select(:employee_id, Employee.all, :id, :email) %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :task_id %><br>
        </div>
        <div class="col-sm-8">
          <%= f.collection_select(:task_id, Task.all, :id, :name) %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>

    <div class="text-center">
      [ <%= link_to 'Cancelar inserção e voltar para a lista de departamentos', departments_path %> ]
    </div>
  </div>
</div>
